@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="w-full min-h-screen bg-zinc-950 flex flex-col items-start py-20 px-6"
     ng-init="submittedData=[]; formData={}">

    <!-- Header -->
    <div class="max-w-6xl mx-auto w-full mb-10">
        <h2 class="text-5xl font-semibold font-barlow text-white mb-4 text-left">Contact Us</h2>
        <p class="text-neutral-400 text-lg font-poppins text-left"> Any question or remarks? Just write us a message! </p>
    </div>

    <div class="max-w-6xl mx-auto w-full grid grid-cols-1 md:grid-cols-2 bg-black rounded-2xl shadow-lg overflow-hidden">

        <!-- Left -->
        <div class="bg-teal-800 p-10 flex flex-col rounded-t-2xl md:rounded-l-2xl md:rounded-tr-none">
            <h3 class="text-3xl font-semibold font-poppins text-black mb-8">Contact Information</h3>
            <div class="space-y-6 text-black font-poppins">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 flex items-center justify-center rounded-full bg-white text-black text-xl">
                        <i data-lucide="phone" class="w-5 h-5"></i>
                    </div>
                    <span class="text-base">+63 999 999 999</span>
                </div>
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 flex items-center justify-center rounded-full bg-white text-black text-xl">
                        <i data-lucide="mail" class="w-5 h-5"></i>
                    </div>
                    <span class="text-base">Dersur.solution@gmail.com</span>
                </div>
            </div>
        </div>

        <!-- Right: Contact Form -->
        <div class="p-10 space-y-6">

            <!-- Names -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="text-xs font-medium text-white block mb-2">
                        First Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" ng-model="formData.firstName"
                           ng-keypress="($event.charCode >= 48 && $event.charCode <= 57) ? $event.preventDefault() : true"
                           maxlength="30"
                           class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300">
                    <p ng-show="isSubmitted && !formData.firstName" class="text-red-400 text-xs mt-1">
                        Please enter your first name.
                    </p>

                </div>
                <div>
                    <label class="text-xs font-medium text-white block mb-2">
                        Last Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" ng-model="formData.lastName" maxlength="30"
                           ng-keypress="($event.charCode >= 48 && $event.charCode <= 57) ? $event.preventDefault() : true"
                           class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300">
                    <p ng-show="isSubmitted && !formData.lastName" class="text-red-400 text-xs mt-1">
                        Please enter your first name.
                    </p>
                </div>
            </div>

            <!-- Email / Phone -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="text-xs font-medium text-white block mb-2">
                        Email <span class="text-red-500">*</span>
                    </label>
                    <input type="email" ng-model="formData.email"
                           maxlength="30"
                           class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300"
                           placeholder="example@email.com">
                    <p ng-show="isSubmitted && !formData.email" class="text-red-400 text-xs mt-1">
                        Please enter a valid email address.
                    </p>
                    <p ng-show="formData.email && !emailValid(formData.email)" class="text-red-400 text-xs mt-1">
                        Please enter a valid email address.
                    </p>
                </div>
                <div>
                    <label class="text-xs font-medium text-white block mb-2">
                        Phone Number <span class="text-red-500">*</span>
                    </label>
                    <input type="tel" ng-model="formData.phone" maxlength="11" pattern="[0-9]{11}"
                           class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300"
                           ng-keypress="($event.charCode >= 48 && $event.charCode <= 57) ? true : $event.preventDefault()"
                           placeholder="Ex: 09123456789">
                    <p ng-show="isSubmitted && !formData.phone" class="text-red-400 text-xs mt-1">
                        Phone must be exactly 11 digits.
                    </p>
                    <p ng-show="formData.phone && formData.phone.length != 11" class="text-red-400 text-xs mt-1">
                        Phone must be exactly 11 digits.
                    </p>
                </div>
            </div>

            <!-- Message -->
            <div>
                <label class="text-xs font-medium text-white block mb-2">
                    Message <span class="text-red-500">*</span>
                </label>
                <textarea rows="5" ng-model="formData.message"
                          class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300"
                          placeholder="Write your message..."></textarea>
                <p ng-show="isSubmitted && !formData.message" class="text-red-400 text-xs mt-1">
                    Message is required.
                </p>
                <p ng-show="formData.message && formData.message.split(' ').length > 100"
                   class="text-red-400 text-xs mt-1">
                    Message must not exceed 100 words.
                </p>
            </div>

            <button ng-click="jsonCall()" class="bg-lime-300 text-black px-6 py-3 rounded-md font-medium shadow-lg hover:bg-lime-400 transition">
                Send Message
            </button>
        </div>
    </div>

    <!-- Submitted Data Table -->
    <div class="mt-10 w-full" ng-show="submittedData.length > 0">
        <h3 class="text-2xl font-bold text-white mb-4">Submitted Data</h3>
        <table class="w-full border border-white text-white">
            <thead class="bg-teal-700">
                <tr>
                    <th class="p-2 border">First Name</th>
                    <th class="p-2 border">Last Name</th>
                    <th class="p-2 border">Email</th>
                    <th class="p-2 border">Phone</th>
                    <th class="p-2 border">Message</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="data in contactData">
                    <td class="border p-2">{{ data.firstName }}</td>
                    <td class="border p-2">{{ data.lastName }}</td>
                    <td class="border p-2">{{ data.email }}</td>
                    <td class="border p-2">{{ data.phone }}</td>
                    <td class="border p-2">{{ data.message }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>