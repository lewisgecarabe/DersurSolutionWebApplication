<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@400;500;600;700&family=Inter:wght@400;500;600&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">

    <!--Tailwind cdn-->
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="~/Content/Site.css" asp-append-version="true" />

    <!-- AngularJS Library -->
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/angular.min.js"></script>
    <script src="~/Scripts/HolderScripts/Module.js"></script>
    <script src="~/Scripts/HolderScripts/Controller.js"></script>
    <script src="~/Scripts/HolderScripts/Service.js"></script>

    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

</head>
<body ng-app="DersurSolutionWebApplication" ng-controller="DersurSolutionWebApplicationController"
      class="bg-black text-white font-barlow">
    <div ng-init="alertfunc()">

    </div>
    <!-- Navbar -->
    <header class="w-full bg-neutral-900 text-white border-b border-neutral-800">
        <div class="max-w-7xl mx-auto px-6 md:px-20 py-4 flex justify-between items-center">

            <!-- Logo -->
            <div class="flex-shrink-0">
                <img class="h-12 md:h-14 w-auto" src="~/Content/image/logo.png" alt="Logo" />
            </div>

            <!-- Desktop Navigation -->
            <nav class="hidden md:flex items-center gap-6">
                <a href="@Url.Action("HomePage", "HomePage")"
                   class="px-4 py-2 rounded-md text-sm font-semibold font-['Barlow']
       @(ViewContext.RouteData.Values["action"]?.ToString() == "HomePage" ? "bg-neutral-800 text-white" : "text-neutral-200 hover:text-white")">
                    Home
                </a>

                <a href="@Url.Action("ServicePage", "HomePage")"
                   class="px-4 py-2 rounded-md text-sm font-semibold font-['Barlow']
       @(ViewContext.RouteData.Values["action"]?.ToString() == "ServicePage" ? "bg-neutral-800 text-white" : "text-neutral-200 hover:text-white")">
                    Services
                </a>

                <a href="@Url.Action("PortfolioPage", "HomePage")"
                   class="px-4 py-2 rounded-md text-sm font-medium font-['Barlow']
       @(ViewContext.RouteData.Values["action"]?.ToString() == "PortfolioPage" ? "bg-neutral-800 text-white" : "text-neutral-200 hover:text-white")">
                    Projects
                </a>

                <a href="@Url.Action("AboutPage", "HomePage")"
                   class="px-4 py-2 rounded-md text-sm font-medium font-['Barlow']
       @(ViewContext.RouteData.Values["action"]?.ToString() == "AboutPage" ? "bg-neutral-800 text-white" : "text-neutral-200 hover:text-white")">
                    About
                </a>
            </nav>


            <!-- Contact Button -->
            <div class="hidden md:block">
                <a href="@Url.Action("ContactPage", "HomePage")"
                   class="px-4 py-2 bg-lime-300 rounded-md text-zinc-950 text-sm font-medium font-['Barlow'] shadow-md hover:bg-lime-400">
                    Contact Us
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden">
                <button id="menu-btn" class="focus:outline-none">
                    <!-- Hamburger Icon -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-7 w-7" fill="none"
                         viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Dropdown Menu -->
        <div id="mobile-menu" class="hidden md:hidden px-6 pb-4">
            <a href="#" class="block px-4 py-2 rounded-md bg-neutral-800 text-sm font-semibold font-['Barlow']">Home</a>
            <a href="#" class="block px-4 py-2 text-neutral-200 hover:bg-neutral-700 rounded-md text-sm font-medium font-['Barlow']">Services</a>
            <a href="#" class="block px-4 py-2 text-neutral-200 hover:bg-neutral-700 rounded-md text-sm font-medium font-['Barlow']">Projects</a>
            <a href="#" class="block px-4 py-2 text-neutral-200 hover:bg-neutral-700 rounded-md text-sm font-medium font-['Barlow']">About</a>
            <a href="#" class="block mt-2 px-4 py-2 bg-lime-300 rounded-md text-zinc-950 text-sm font-medium font-['Barlow'] shadow-md hover:bg-lime-400">Contact Us</a>
        </div>
    </header>




    <div>
        @RenderBody()
    </div>


    <!-- Footer -->
    <footer class="bg-teal-800 text-white mt-md-5">
        <!-- Hero Section -->
        <div class="relative w-full h-[472px] flex flex-col justify-center items-center text-center">
            <!-- Background image -->
            <img src="~/Content/image/herofooter.png" alt="Footer Background" class="absolute inset-0 w-full h-full object-cover">
            <!-- Overlay -->
            <div class="absolute inset-0 bg-neutral-500 opacity-80"></div>

            <!-- Content -->
            <div class="relative z-10 max-w-3xl px-4">
                <p class="text-2xl md:text-3xl font-semibold mb-6">
                    "Build your online presence with Dersur — your trusted partner for modern website design, development, and maintenance."
                </p>
                <p class="text-lg md:text-2xl mb-6">
                    Ready to build your project? Let’s talk about your plans.
                </p>
                <a href="@Url.Action("ContactPage", "HomePage")"
                   class="bg-lime-300 text-black font-semibold px-6 py-3 rounded-md shadow hover:bg-lime-400 transition">
                    REQUEST A SCHEDULE CALL
                </a>
            </div>
        </div>

        <!-- Main Footer Content -->
        <div class="max-w-6xl mx-auto grid grid-cols-1 md:grid-cols-4 gap-8 px-6 py-12">
            <!-- Logo & About -->
            <div>
                <img src="~/Content/image/logo.png" alt="Dersur Logo" class="w-40 mb-4">
                <p class="text-sm leading-relaxed">
                    The company brings together a highly skilled technical staff to ensure that
                    excellence in design services standards are achieved to the satisfaction of the
                    clients and owners.
                </p>
            </div>

            <!-- Infos -->
            <div>
                <h3 class="font-bold mb-3">Infos</h3>
                <p class="text-sm">Dersur.solution@gmail.com</p>
            </div>

            <!-- Links -->
            <div>
                <h3 class="font-bold mb-3">Links</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="@Url.Action("HomePage", "HomePage")" class="hover:underline">Home</a></li>
                    <li><a href="@Url.Action("ServicePage", "HomePage")" class="hover:underline">Services</a></li>
                    <li><a href="@Url.Action("PortfolioPage", "HomePage")" class="hover:underline">Projects</a></li>
                    <li><a href="@Url.Action("ContactPage", "HomePage")" class="hover:underline">Contact us</a></li>
                    <li><a href="@Url.Action("AboutPage", "HomePage")" class="hover:underline">About</a></li>
                </ul>
            </div>

            <!-- Social Links -->
            <div>
                <h3 class="font-bold mb-3">Social Links</h3>
                <ul class="space-y-2 text-sm">
                    <li><a href="#" class="hover:underline">Facebook</a></li>
                    <li><a href="#" class="hover:underline">LinkedIn</a></li>
                </ul>
            </div>
        </div>

        <!-- Copyright -->
        <div class="text-center text-xs py-4 border-t border-neutral-700">
            © Copyright 2025 Dersur Solution | All Rights Reserved | Built by: <span class="font-semibold">Lewis Gecarane</span>
        </div>
    </footer>


    <script>t
        // Mobile menu toggle
        const menuBtn = document.getElementById("menu-btn");
        const mobileMenu = document.getElementById("mobile-menu");

        menuBtn.addEventListener("click", () => {
            mobileMenu.classList.toggle("hidden");
        });
    </script>
</body>
</html>
