@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="w-full min-h-screen bg-zinc-950 flex flex-col items-start py-20 px-6"
     ng-init="submittedData=[]; formData={}">

    <!-- Heading -->
    <h2 class="text-5xl font-semibold font-barlow text-white mb-4 text-left">Contact Us</h2>
    <p class="text-neutral-400 text-lg font-poppins mb-12 text-left">
        Any question or remarks? Just write us a message!
    </p>

    <!-- Container -->
    <div class="w-full grid grid-cols-1 md:grid-cols-2 gap-8 bg-black rounded-none shadow-lg overflow-hidden">

        <!-- Left: Contact Information -->
        <div class="bg-teal-800 p-10 relative">
            <h3 class="text-3xl font-semibold font-poppins text-black mb-8">Contact Information</h3>
            <div class="space-y-6 text-black font-poppins">
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 flex items-center justify-center rounded-full text-xl">📞</div>
                    <span class="text-base">+63 999 999 999</span>
                </div>
                <div class="flex items-center gap-4">
                    <div class="w-10 h-10 flex items-center justify-center rounded-full text-xl">✉️</div>
                    <span class="text-base">Dersur.solution@gmail.com</span>
                </div>
            </div>
        </div>

        <!-- Right: Contact Form -->
        <div class="p-10 space-y-6">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="text-xs font-medium text-white block mb-2">First Name</label>
                    <input type="text" ng-model="formData.firstName"  class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300" />
                </div>
                <div>
                    <label class="text-xs font-medium text-white block mb-2">Last Name</label>
                    <input type="text" ng-model="formData.lastName" class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300" />
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div>
                    <label class="text-xs font-medium text-white block mb-2">Email</label>
                    <input type="email" ng-model="formData.email" class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300" />
                </div>
                <div>
                    <label class="text-xs font-medium text-white block mb-2">Phone Number</label>
                    <input type="tel" ng-model="formData.phone" class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300" />
                </div>
            </div>

            <div>
                <label class="text-xs font-medium text-white block mb-2">Message</label>
                <textarea rows="5" ng-model="formData.message" class="w-full border-b border-white/30 bg-transparent text-white p-2 focus:outline-none focus:border-lime-300" placeholder="Write your message..."></textarea>
            </div>

            <!-- Button using ng-click -->
            <button ng-click="submitData()" class="bg-lime-300 text-white px-6 py-3 rounded-md font-medium shadow-lg hover:bg-lime-400 transition">
                Send Message
            </button>
        </div>
    </div>

    <!-- Display Submitted Data using ng-show & ng-repeat -->
    <div class="mt-10 w-full" ng-show="submittedData.length > 0">
        <h3 class="text-2xl font-bold text-white mb-4">Submitted Data</h3>
        <table class="w-full border border-white text-white">
            <thead class="bg-teal-700">
                <tr>
                    <th class="p-2 border">First Name</th>
                    <th class="p-2 border">Last Name</th>
                    <th class="p-2 border">Email</th>
                    <th class="p-2 border">Phone</th>
                    <th class="p-2 border">Message</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="data in submittedData">
                    <td class="border p-2">{{ data.firstName }}</td>
                    <td class="border p-2">{{ data.lastName }}</td>
                    <td class="border p-2">{{ data.email }}</td>
                    <td class="border p-2">{{ data.phone }}</td>
                    <td class="border p-2">{{ data.message }}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
