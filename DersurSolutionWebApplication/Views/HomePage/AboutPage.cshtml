@{
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section class="max-w-6xl mx-auto px-6 py-20 text-center">
    <!-- Title -->
    <h2 class="text-lime-300 text-4xl font-['Montserrat']">
        WHO WE ARE
    </h2>

    <!-- Logo -->
    <div class="flex justify-center my-6">
        <img class="w-[250px] h-auto object-contain" src="~/Content/image/logo.png" alt="Dersur Logo" />
    </div>

    <!-- Description -->
    <p class="max-w-4xl mx-auto text-neutral-400 text-2xl md:text-3xl font-bold font-['Barlow'] leading-relaxed mb-20">
        “Founded in 2025 by Lewis, an IT student passionate about technology and problem-solving,
        Dersur began as a small personal project. Today, we work with clients from different industries,
        delivering websites that not only look great but also perform.”
    </p>

    <!-- Mission & Vision Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        <!-- Mission -->
        <div class="bg-teal-800 relative p-10 rounded-xl shadow-lg text-center text-black">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-11/12 h-1 bg-lime-300"></div>
            <h3 class="text-2xl font-semibold font-['Barlow'] mb-6">Mission</h3>

            <img class="mx-auto mb-6 w-32 h-32 object-contain" src="~/Content/image/mission.png" alt="Mission Icon" />

            <p class="text-xl font-normal font-['Barlow'] leading-relaxed">
                To empower businesses with reliable, modern websites that drive growth and trust.
            </p>
            <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-11/12 h-1 bg-lime-300"></div>
        </div>

        <!-- Vision -->
        <div class="bg-teal-800 relative p-10 rounded-xl shadow-lg text-center text-black">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-11/12 h-1 bg-lime-300"></div>
            <h3 class="text-2xl font-semibold font-['Barlow'] mb-6">Vision</h3>

            <img class="mx-auto mb-6 w-32 h-32 object-contain" src="~/Content/image/vission.png" alt="Vision Icon" />

            <p class="text-xl font-normal font-['Barlow'] leading-relaxed">
                To become a trusted web solutions partner for small and medium businesses worldwide.
            </p>
            <div class="absolute bottom-0 left-1/2 -translate-x-1/2 w-11/12 h-1 bg-lime-300"></div>
        </div>
    </div>
</section>
